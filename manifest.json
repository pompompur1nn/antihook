{
  "manifest_version": 2,
  "name": "Antihook",
  "version": "2.2.1",
  "description": "Monitors requests to Discord webhooks and shows notifications",
  "author": "pompompurin, leolionross",
  "permissions": [
    "webRequest",
    "notifications",
    "<all_urls>",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icon16.webp",
    "48": "icon48.webp",
    "96": "icon96.webp"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.webp",
      "48": "icon48.webp",
      "96": "icon96.webp"
    },
    "default_title": "Antihook",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Open Antihook Stats"
    }
  }
}
